{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {

      "#controllers/*": ["./src/controllers/*"],
      "#models/*": ["./src/models/*"],
      "#services/*": ["./src/services/*"],
    }
  }
}